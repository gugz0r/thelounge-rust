{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "com.tauri",
  "productName": "thelounge-rust",
  "version": "0.1.0",
  "build": {
    "frontendDist": "client",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devUrl": "http://localhost:9000"

  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "thelounge",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "label": "main",
        "url": "index.html",
	     	"devtools": true
        
      }
    ]
  },
  "bundle": {},
  "plugins": {
    "reload": true
  }

}